<style>
  /* Add some additional glassmorphism effects */
  .pricing-card {
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.36);
    transition: all 0.3s ease;
  }

  .pricing-card:hover {
    box-shadow: 0 8px 42px 0 rgba(0, 173, 181, 0.3);
  }

  /* Add subtle animation effects */
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .pricing-card:hover {
    animation: float 4s ease-in-out infinite;
  }

  /* Entrance animations */
  .entrance-fade-in {
    animation: fadeIn 1s ease-out forwards;
    opacity: 0;
  }

  .entrance-fade-in-delay {
    animation: fadeIn 1s ease-out 0.3s forwards;
    opacity: 0;
  }

  .entrance-slide-down {
    animation: slideDown 1s ease-out forwards;
    opacity: 0;
    transform: translateY(-50px);
  }

  .entrance-slide-up {
    animation: slideUp 1s ease-out forwards;
    opacity: 0;
    transform: translateY(50px);
  }

  .entrance-stagger > * {
    opacity: 0;
    transform: translateY(30px);
  }

  .entrance-stagger > *:nth-child(1) {
    animation: slideUp 0.6s ease-out 0.2s forwards;
  }

  .entrance-stagger > *:nth-child(2) {
    animation: slideUp 0.6s ease-out 0.4s forwards;
  }

  .entrance-stagger > *:nth-child(3) {
    animation: slideUp 0.6s ease-out 0.6s forwards;
  }

  .entrance-stagger-delayed > * {
    opacity: 0;
    transform: translateY(30px);
  }

  .entrance-stagger-delayed > *:nth-child(1) {
    animation: slideUp 0.6s ease-out 0.6s forwards;
  }

  .entrance-stagger-delayed > *:nth-child(2) {
    animation: slideUp 0.6s ease-out 0.7s forwards;
  }

  .entrance-stagger-delayed > *:nth-child(3) {
    animation: slideUp 0.6s ease-out 0.8s forwards;
  }

  .entrance-stagger-delayed > *:nth-child(4) {
    animation: slideUp 0.6s ease-out 0.9s forwards;
  }

  .entrance-stagger-delayed > *:nth-child(5) {
    animation: slideUp 0.6s ease-out 1s forwards;
  }

  .entrance-stagger-delayed > *:nth-child(6) {
    animation: slideUp 0.6s ease-out 1.1s forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* FAQ item hover effect */
  .faq-item {
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px 0 rgba(0, 173, 181, 0.2);
  }
</style>

<script>
  // Add intersection observer for triggering animations when scrolling
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.style.visibility = "visible";
          }
        });
      },
      { threshold: 0.1 }
    );

    // Observe all animated elements
    document
      .querySelectorAll(
        ".entrance-fade-in, .entrance-slide-up, .entrance-slide-down, .entrance-stagger, .entrance-stagger-delayed"
      )
      .forEach((el) => observer.observe(el));
  });
</script>
